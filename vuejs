    <title>Calculadora com Vue.js</title>
    <style>
        /* Estilos aqui */
    </style>
</head>
<body>
    <div id="app">
        <h1>Gustavo Neitzke</h1>
        <div class="calculadora">
            <h1>Calculadora</h1>
            <p id="resultado">{{ resultado }}</p>
            <table>
                <!-- BotÃµes aqui -->
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script>
        new Vue({
            el: '#app',
            data: {
                resultado: ''
            },
            methods: {
                insert(num) {
                    this.resultado += num;
                },
                clean() {
                    this.resultado = '';
                },
                back() {
                    this.resultado = this.resultado.substring(0, this.resultado.length - 1);
                },
                calcular() {
                    try {
                        this.resultado = eval(this.resultado);
                    } catch (error) {
                        this.resultado = 'Erro';
                    }
                }
            }
        });
    </script>
</body>
</html>
