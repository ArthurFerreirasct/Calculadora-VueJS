<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora Vue.js</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
</head>
<body>
    <div id="app">
        <h1>Calculadora Vue.js</h1>
        <input type="text" v-model="expression" @keydown.enter="calculate">
        <button @click="calculate">Calcular</button>
        <p>{{ result }}</p>
    </div>

    <script>
        new Vue({
            el: '#app',
            data: {
                expression: '',
                result: ''
            },
            methods: {
                calculate: function() {
                    try {
                        this.result = eval(this.expression);
                    } catch(error) {
                        this.result = 'Erro na express√£o';
                    }
                }
            }
        });
    </script>
</body>
</html>
